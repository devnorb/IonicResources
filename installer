#!/bin/bash

main() {
    clear

    if [ -w "/Applications" ]; then
        curl -s "https://raw.githubusercontent.com/devnorb/OpiumwareInstall/refs/heads/main/global.sh" | bash
    else
        echo -e "${YELLOW}[!] Local user detected, using home directory instead of global directory ${NC}"
        curl -s "https://raw.githubusercontent.com/devnorb/OpiumwareInstall/refs/heads/main/local.sh" | bash
    fi
}

main
